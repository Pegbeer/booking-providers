generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  username String
  password String
  providerId String
  provider Provider @relation(fields: [providerId], references: [id])
}

model Provider{
  id  String @id @default(uuid())
  name String
  users User[]
  spots ProviderSpot[]
}

model Spot{
  id  String @id @default(uuid())
  campaingId String
  cost Decimal
  createdAt DateTime @default(now())
  campaing Campaing @relation(fields: [campaingId], references: [id])
  points Point[]
  providers ProviderSpot[]
}

model ProviderSpot{
  id String @id @default(uuid())
  providerId String
  spotId String
  isActive Boolean
  createdAt DateTime @default(now())
  provider Provider @relation(fields: [providerId], references: [id])
  spot Spot @relation(fields: [spotId], references: [id])
}

model Point{
  id String @id @default(uuid())
  x Int
  y Int
  spotId String
  spot Spot @relation(fields: [spotId],references: [id])
}

model Campaing{
  id  String @id @default(uuid())
  columnsGrid Int
  rowsGrid Int
  createdAt DateTime @default(now())
  active Boolean @default(true)
  spots Spot[]
}
