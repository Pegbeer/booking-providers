generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  username String
  password String
  providerId String
  provider Provider @relation(fields: [providerId], references: [id])
}

model Provider{
  id  String @id @default(uuid())
  name String
  users User[]
  spots Spot[]
}

model Spot{
  id  String @id @default(uuid())
  providerId String
  owner Provider @relation(fields: [providerId], references: [id])
}

model Campaing{
  id  String @id @default(uuid())
  createdAt DateTime @default(now())
  publisher String
}
